<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".BurnhamPark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/burnham_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adlam_display"
                android:text="Burnham Park"
                android:textAlignment="center"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/burnham_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="sans-serif"
                android:text="Jose Abad Santos Dr, Baguio, 2600 Benguet"
                android:textAlignment="center"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/burnham_img"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/burnham" />

            <TextView
                android:id="@+id/botanical_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operating Hours: 24hrs Daily"
                android:textStyle="bold"
                android:fontFamily="@font/afacad"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/burnham_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/afacad"
                android:text="Burnham Park is the heart of Baguio City, a sprawling 32.84-hectare public park named after the American architect Daniel Burnham, who designed the city. It's a perfect spot for a relaxing casual walk, boat rides on the man-made lake, or a picnic with family and friends"
                android:textAlignment="center"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
