<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MinesView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/minesview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adlam_display"
                android:text="Mines View"
                android:textAlignment="center"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/minesview_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="sans-serif"
                android:text="Mines View, Baguio, 2600 Benguet"
                android:textAlignment="center"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/minesview_img"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/minesview" />

            <TextView
                android:id="@+id/minesview_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operating Hours: 7AM - 10PM Daily"
                android:textStyle="bold"
                android:fontFamily="@font/afacad"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/minesview_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/afacad"
                android:text="Mines View Park offers breathtaking views over the Amburayan Valley, along with a fascinating glimpse into the region's history. Back in the early 1900s, Baguio was a thriving hub for the mining industry. Today, the iconic abandoned gold and copper mines of Itogon serve as a dramatic backdrop for the park's popular observation deck."
                android:textAlignment="center"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
